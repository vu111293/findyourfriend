<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bk_radiant" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ForgetPasswordActivity" >

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_appname"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgLogo"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Quên mật khẩu"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.sgu.findyourfriend.screen.MyEditText
            android:id="@+id/EditText_ForgetPassword_Phone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignRight="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="27dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/silver" />

        <Button
            android:id="@+id/Button_ForgetPassword_FindYourPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/EditText_ForgetPassword_Email"
            android:layout_alignRight="@+id/EditText_ForgetPassword_Email"
            android:layout_below="@+id/EditText_ForgetPassword_Email"
            android:layout_marginTop="34dp"
            android:background="@drawable/button_green"
            android:text="Khôi phục mật khẩu"
            android:textColor="#FFFFFF" />

        <com.sgu.findyourfriend.screen.MyEditText
            android:id="@+id/EditText_ForgetPassword_Email"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/EditText_ForgetPassword_Phone"
            android:layout_alignRight="@+id/EditText_ForgetPassword_Phone"
            android:layout_below="@+id/EditText_ForgetPassword_Phone"
            android:layout_marginTop="22dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:hint="Nhập địa chỉ mail"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/silver" />
    </RelativeLayout>

</ScrollView>